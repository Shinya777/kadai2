<% if @book.errors.any? %>
<%= pluralize(@book.errors.count, "error") %>
<% @book.errors.full_messages.each do |message| %>
        <%= message %>
  <% end %>
  <% end %>
<h1>Editing Books</h1>
<%= form_for(@book) do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Body</h4>
 <%= f.text_area :body %>
 <br><%= f.submit 'Update Book' %></br>
 <% end %>
 <p><%= link_to "Show", book_path(@book)%> | <%= link_to "Back", books_path %></p>